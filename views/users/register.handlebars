<div class="row mx-auto">
    <div class="col-md-6 mx-auto">
        <div class="card card-body">
            <img src="/images/agree.png" alt="logo" class="logo">
            <h3 class="text-center my-3">Account registration</h3>

            <form action="/users/register" method="post">
                <div class="form-group">
                    <label>Full name</label>
                    <input name="name" value="{{name}}" type="text" class="form-control" required>
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <input name="email" value="{{email}}" type="email" class="form-control" required>
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input name="password" type="password" class="form-control" required>
                </div>
                <div class="form-group">
                    <label>Confirm password</label>
                    <input name="password2" type="password" class="form-control" required>
                </div>
                <button type="submit" class="btn btn-success">Register</button>
            </form>

        </div>

    </div>

</div>
