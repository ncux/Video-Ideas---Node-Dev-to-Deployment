<div class="card card-body">
    <h3>Update video idea</h3>

    <form action="/ideas/{{idea.id}}?_method=PUT" method="post">
        <input type="hidden" name="_method" value="PUT">

        {{#each errors}}
            <div class="alert alert-danger">   {{message}}   </div>
        {{else}}
        {{/each}}

        <div class="form-group">
            <label for="title">Title</label>
            <input value="{{idea.title}}" id="title" name="title" class="form-control" required>
        </div>

        <div class="form-group">
            <label for="details">Details</label>
            <textarea id="details" name="details" class="form-control" required>{{idea.details}}</textarea>
        </div>
        <button type="submit" class="btn btn-success">Update</button>

    </form>

</div>

